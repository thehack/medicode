<script type="text/javascript">
$('.bloodType').click(
	function() {
		$('#bloodBox').val($(this).text());
	});
		$('#save').click( function() {
			$.ajax({
			  type: 'POST',
			  url: '/profile/create',
			  data: {	firstName: $('#firstName').val(), 
						lastName: $('#lastName').val(),
						dob: $('#dob').val(),
						bloodType: $('#bloodBox').val(),
						contactFirst: $('#contactFirst').val(),
						contactLast: $('#contactLast').val(),
						contactNumber1: $('#contactNumber1').val(),
						contactNumber2: $('#contactNumber2').val(),
						medicalHistory: $('#medicalHistory').val(),
						allergies: $('#allergies').val(),
						medicalNotes: $('#medicalNotes').val()
					},
			  complete: function() {window.location='/admin';}
			});

		});
</script>